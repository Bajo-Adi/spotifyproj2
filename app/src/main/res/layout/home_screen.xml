<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/spotify_black"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".HomeScreen">

<!-- Other Views... -->

    <!-- ImageView (and other elements as needed) -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="152dp"
        android:layout_height="176dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="64dp"
        app:srcCompat="@drawable/spotify_logo" />

<!-- New Wrapped Button -->
    <!-- Token Button -->
    <Button
        android:id="@+id/token_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/spotify"
        android:text="Log Into Spotify"
        app:cornerRadius="15dp" />
<!-- New Duo Wrapped Button -->
    <!-- New Wrapped Button -->
    <Button
        android:id="@+id/new_wrapped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/spotify"
        android:text="Generate New Wrapped"
        app:cornerRadius="15dp" />


    <!-- New Duo Wrapped Button -->
    <Button
        android:id="@+id/new_duo_wrapped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/spotify"
        android:text="New Duo Wrapped with a friend"
        app:cornerRadius="15dp" />
<!-- Settings Button -->
    <!-- Past Wrappeds Button -->
    <Button
        android:id="@+id/past_wrappeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/spotify"
        android:text="View Past Wrapped"
        app:cornerRadius="15dp" />

    <!-- Friends Wrappeds Button -->
    <Button
        android:id="@+id/buttonShareWrapped"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/spotify"
        android:text="Send your wrapped to a friend"
        app:cornerRadius="15dp" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/dark_green"
        android:fontFamily="@font/spotify"
        android:text="Settings"
        app:cornerRadius="15dp" />


</LinearLayout>
