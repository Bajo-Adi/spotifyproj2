<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/spotify_black"
tools:context=".HomeScreen">

<!-- Other Views... -->

<!-- Token Button -->
<Button
    android:id="@+id/token_btn"
    android:layout_width="147dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:backgroundTint="@color/dark_green"
    android:fontFamily="@font/spotify"
    android:text="Log Into Spotify"
    app:cornerRadius="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<!-- New Wrapped Button -->
<Button
    android:id="@+id/new_wrapped"
    android:layout_width="147dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/dark_green"
    android:fontFamily="@font/spotify"
    android:text="Generate New Wrapped"
    app:cornerRadius="15dp"
    app:layout_constraintStart_toStartOf="@id/token_btn"
    app:layout_constraintTop_toBottomOf="@id/token_btn" />

<!-- New Duo Wrapped Button -->
<Button
    android:id="@+id/new_duo_wrapped"
    android:layout_width="147dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/dark_green"
    android:fontFamily="@font/spotify"
    android:text="New Duo Wrapped"
    app:cornerRadius="15dp"
    app:layout_constraintStart_toStartOf="@id/new_wrapped"
    app:layout_constraintTop_toBottomOf="@id/new_wrapped" />

<!-- Past Wrappeds Button -->
<Button
    android:id="@+id/past_wrappeds"
    android:layout_width="147dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/dark_green"
    android:fontFamily="@font/spotify"
    android:text="View Past Wrapped"
    app:cornerRadius="15dp"
    app:layout_constraintStart_toStartOf="@id/new_duo_wrapped"
    app:layout_constraintTop_toBottomOf="@id/new_duo_wrapped" />

<!-- Settings Button -->
<Button
    android:id="@+id/settings_btn"
    android:layout_width="147dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:backgroundTint="@color/dark_green"
    android:fontFamily="@font/spotify"
    android:text="Settings"
    app:cornerRadius="15dp"
    app:layout_constraintStart_toStartOf="@id/past_wrappeds"
    app:layout_constraintTop_toBottomOf="@id/past_wrappeds" />

<!-- ImageView and other elements can remain as before -->
<ImageView
    android:id="@+id/imageView2"
    android:layout_width="76dp"
    android:layout_height="168dp"
    android:layout_marginTop="64dp"
    android:layout_marginEnd="168dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/spotify_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>
