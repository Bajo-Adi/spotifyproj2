<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Spotifyproj2"
        tools:targetApi="31">
        <activity
            android:name=".Past_Wrapped"
            android:exported="false" />
        <activity
            android:name=".NewWrappedActivity"
            android:exported="false" />
        <activity
            android:name=".SettingsUpdateInfo"
            android:exported="false" />
        <activity
            android:name=".CreateNewAccount"
            android:exported="false" />
        <activity
            android:name=".HomeScreen"
            android:exported="false" /> <!-- com.example.project2_spotify_cs2340.MainActivity declaration -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <!-- Match the scheme and host of the redirect URI -->
                <!-- Must be the same in com.example.project2_spotify_cs2340.MainActivity, Gradle, and Spotify Dashboard! -->

                <data
                    android:host="auth"
                    android:scheme="SPOTIFY-SDK" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>